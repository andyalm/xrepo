<Project>
  <UsingTask TaskName="XRepo.Build.Tasks.ResolvePackageSources"
             AssemblyFile="$(MSBuildThisFileDirectory)\XRepo.Build.dll"/>

  <Target Name="_XRepoOverridePackageReferences" BeforeTargets="Restore">
    <XRepo.Build.Tasks.ResolvePackageSources
            ProjectDirectory="$(MSBuildProjectDirectory)">
      <Output TaskParameter="PackageSources" PropertyName="RestoreSources"/>
    </XRepo.Build.Tasks.ResolvePackageSources>
  </Target>
</Project>