<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net6.0</TargetFrameworks>
    <AssemblyName>XRepo.Build</AssemblyName>
    <RootNamespace>XRepo.Build</RootNamespace>
    <IsPackable>false</IsPackable>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Tasks.Core" Version="17.4.*" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="17.4.*" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Core\Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="*.targets">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <Target Name="_Debug" AfterTargets="Build">
    <PropertyGroup>
      <NewtonsoftPath Condition="$([System.String]::new('%(Reference.Identity)').Contains('Newtonsoft.Json'))">%(Reference.Identity)</NewtonsoftPath>
    </PropertyGroup>
    <Copy SourceFiles="$(NewtonsoftPath)" DestinationFolder="$(OutputPath)" />
  </Target>
</Project>