<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard1.5</TargetFramework>
    <AssemblyName>XRepo.Build</AssemblyName>
    <RootNamespace>XRepo.Build</RootNamespace>
    <IsPackable>false</IsPackable>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Tasks.Core" Version="15.3.*" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.3.*" />
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Core\Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="*.targets">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <Target Name="_Debug" AfterTargets="Build">
    <PropertyGroup>
      <NewtonsoftPath Condition="$([System.String]::new('%(Reference.Identity)').Contains('Newtonsoft.Json'))">%(Reference.Identity)</NewtonsoftPath>
    </PropertyGroup>
    <Copy SourceFiles="$(NewtonsoftPath)"
          DestinationFolder="$(OutputPath)" />
  </Target>
</Project>